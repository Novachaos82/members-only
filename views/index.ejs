<!DOCTYPE html>
<html>
  <%- include('./header.ejs') %>
  <body>
    <%- include('./navbar.ejs') %>
    <h1><%= title %></h1>
    <% if(message){ message.map(msg=>{%>
    <div class="message">
      <div class="title"><%= msg.title %></div>

      <%if(!user || !user.member){%>
      <div class="title">you need to be a member</div>
      <%}else{%>

      <div class="title"><%= msg.user.username %></div>
      <%}%> 
      <% if(!user || !user.admin){ %>
            <div></div>
        <%}else{%>
        <form action="/delete/<%=msg._id%>" method="POST">
          <input type="hidden" name="msgID" value="<%=msg._id%>" />
          <button type="submit">delete</button>
        </form>
        <%}%>
    <%})} %> <% if (user) {%>
    <p class="bolding">Welcome <%= user.username %></p>
    <% }else {%>
    <p class="bolding">You are not logged in</p>
    <% }%>
    
  </body>
</html>
